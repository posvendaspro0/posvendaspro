// Schema do Prisma para Sistema SaaS Multiempresas
// Gestão de Reclamações Mercado Livre

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum para tipos de usuário
enum Role {
  ADMIN
  CLIENT
}

// Enum para status de tickets
enum TicketStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// Enum para tipo de problema
enum ProblemType {
  PRODUCT_NOT_RECEIVED
  PRODUCT_DEFECTIVE
  WRONG_PRODUCT
  LATE_DELIVERY
  DAMAGED_PACKAGE
  RETURN_REQUEST
  OTHER
}

// Tabela de Empresas/Clientes
model Company {
  id        String   @id @default(cuid())
  name      String
  cnpj      String?  @unique
  email     String   @unique
  
  // Dados do responsável
  responsibleFirstName String?
  responsibleLastName  String?
  whatsapp            String?
  
  // Endereço
  cep          String?
  street       String?
  number       String?
  complement   String?
  neighborhood String?
  city         String?
  state        String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  users        User[]
  mlAccounts   MlAccount[]
  mlClaimData  MlClaimData[]
  tickets      Ticket[]
  operators    Operator[]

  @@map("companies")
}

// Tabela de Usuários
model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(CLIENT)
  companyId    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relações
  company  Company?  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  accounts Account[]
  sessions Session[]

  @@index([email])
  @@index([companyId])
  @@map("users")
}

// Tabelas para NextAuth.js
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// MODELOS PREPARADOS PARA INTEGRAÇÃO FUTURA
// ============================================

// Tabela de Contas do Mercado Livre vinculadas a empresas
// TODO: Implementar lógica de OAuth e refresh tokens quando integrar API ML
model MlAccount {
  id                  String   @id @default(cuid())
  companyId           String   @unique // Cada empresa pode ter apenas uma conta ML
  mercadoLivreUserId  String   @unique // ID do usuário no Mercado Livre
  accessToken         String   @db.Text // Token de acesso (criptografado recomendado)
  refreshToken        String   @db.Text // Token para renovação
  expiresAt           DateTime // Data de expiração do access token
  connectedAt         DateTime @default(now()) // Data da primeira conexão (não muda em reconnects)
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relações
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("ml_accounts")
}

model MlClaimData {
  id                String   @id @default(cuid())
  companyId         String   // Empresa dona da reclamação
  mlClaimId         String   // ID da claim no Mercado Livre
  mlOrderId         String?  // ID do pedido no ML
  
  // Campos editáveis pelo usuário
  responsible       String?  // Responsável pelo atendimento
  productSku        String?  // SKU do produto
  resolutionCost    Decimal? @default(0) @db.Decimal(10, 2) // Custo de resolução
  observation       String?  @db.Text // Observações sobre o caso
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relações
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Índices
  @@unique([companyId, mlClaimId])
  @@index([mlClaimId])
  @@index([mlOrderId])
  @@map("ml_claim_data")
}

// Tabela de Tickets (antiga Complaints/Reclamações)
// Gestão manual de tickets com integração futura ao Mercado Livre
model Ticket {
  id               String       @id // ID customizado pelo usuário
  companyId        String
  
  // Informações básicas
  status           TicketStatus @default(PENDING)
  responsible      String? // Nome do responsável pelo atendimento
  complaintDate    DateTime @default(now()) // Data da reclamação
  
  // Informações do pedido/produto
  mlOrderId        String? // ID do pedido no Mercado Livre (futuro)
  productSku       String? // SKU do produto
  problemType      ProblemType // Tipo do problema
  observation      String       @db.Text // Observações/descrição detalhada
  
  // Informações de resolução
  resolutionDate   DateTime? // Data da resolução
  resolutionCost   Decimal?     @db.Decimal(10, 2) // Custo da resolução (R$)
  affectedReputation Boolean   @default(false) // Afetou a reputação no ML
  resolutionTime   Int? // Tempo de resolução em horas
  
  // Dados do Mercado Livre (para integração futura)
  mlComplaintId    String? @unique // ID da reclamação no ML
  mlStatus         String? // Status original do ML
  clientName       String? // Nome do cliente
  clientEmail      String? // E-mail do cliente
  
  // Timestamps
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lastSyncAt       DateTime? // Última sincronização com ML (futuro)

  // Relações
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([status])
  @@index([mlOrderId])
  @@index([createdAt])
  @@map("tickets")
}

// Tabela de Operadores
// Pessoas que gerenciam os tickets de uma empresa
model Operator {
  id           String   @id @default(cuid())
  companyId    String
  name         String
  email        String
  passwordHash String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relações
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, email]) // Email único dentro de cada empresa
  @@index([companyId])
  @@index([email])
  @@map("operators")
}
